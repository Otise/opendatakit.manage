<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:padding="10px">
    <TextView android:id="@+id/user_id_label" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:text="@string/user_id"/>
  <EditText android:id="@+id/user_id_text" 
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content"/>
  <View android:layout_height="1px"
        android:layout_width="fill_parent"
        android:background="#000000"/>
  <TextView android:id="@+id/sms_number_label" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:text="@string/server_sms_num"/>
  <EditText android:id="@+id/sms_number_text" 
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content"/>
  <Button android:id="@+id/register_phone_button_sms"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/register_phone"
    />
  <View android:layout_height="1px"
        android:layout_width="fill_parent"
        android:background="#000000"/>
  <TextView android:id="@+id/server_url_label" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:text="@string/server_url"/>
  <EditText android:id="@+id/server_url_text" 
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content"
           android:text="http://odk-manage-dev.appspot.com"/>
  <Button android:id="@+id/register_phone_button_http"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/register_phone"
    />
</LinearLayout>
